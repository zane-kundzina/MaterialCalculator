@model MaterialViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1 class="display-4">Steel Material Load Calculator</h1>
    <p></p>
    <br />
    <br />
</div>


<div class="container">

    <div class="container">
        <div class="row row-cols-auto">
            <div class="col">
                <p class="text-sm-center">Material Type</p>
            </div>
            <div class="col">
                <p class="text-sm-center">Material Size</p>
            </div>
            <div class="col">
                <p class="text-sm-center">Piece size m2/m</p>
            </div>
            <div class="col">
                <p class="text-sm-center">Pieces</p>
            </div>
            <div class="col">
                <p class="text-sm-center">m2/m total</p>
            </div>
            <div class="col">
                <p class="text-sm-center"> kg </p>
            </div>
            <div class="col">
                <p class="text-sm-center">EUR/tn</p>
            </div>
            <div class="col">
                <p class="text-sm-center"> EUR </p>
            </div>
            <div class="col">
                <p class="text-sm-center">Project</p>
            </div>
            <div class="col">
                <p class="text-sm-center">Comments</p>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row row-cols-auto">
            <div class="col">
                <!-- Material Type selection cell -->
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    <option selected> Chose Type </option>
                    <option value="1">Sheet</option>
                    <option value="2">SHS</option>
                    <option value="3">RHS</option>
                    <option value="4">CHS</option>
                    <option value="5">HEA</option>
                    <option value="6">HEB</option>
                    <option value="7">IPE</option>
                    <option value="8">L</option>
                    <option value="9">Flat Bar</option>
                    <option value="10">Round Bar</option>
                    <option value="11">RHS</option>
                    <option value="12">UPE</option>
                    <option value="13">UPN</option>
                </select>
            </div>
            <div class="col">
                <!-- Material Size selection cell -->
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    <option selected> Cose Size </option>

                    <!--Sizes available for every chosen material type have to be shown from data base -->

                    <option value="1">25x2000x12000</option>
                    <option value="2"></option>
                    <option value="3"></option>

                </select>
            </div>
            <div class="col">
                <!-- m2/m per piece - system shows from data base -->
                <p class="text-sm-center"> 0 </p>
            </div>
            <div class="col">
                <!-- pieces - user inputs number of pieces -->
                <input type="number" id="quantity" name="quantity" min="1" max="200">
            </div>
            <div class="col">
                <!-- m2 or m - system calculates total amount of material m or m2 -->
                <p class="text-sm-center"> 0 </p>
            </div>
            <div class="col">
                <!-- kg - system calculates amount of material kg -->
                <p class="text-sm-center"> 0 </p>
            </div>
            <div class="col">
                <!-- EUR/tn - user inputs price of material EUR/tn -->
                <input type="number" id="quantity" name="quantity" min="1" max="15000">
            </div>
            <div class="col">
                <!-- EUR - system calculates total EUR per material amount -->
                <p class="text-sm-center"> 0 </p>
            </div>
            <div class="col">
                <!-- Project - user inputs project number or name -->
                <input class="input" type="text" id="projectName" name="projectName">
            </div>
            <div class="col">
                <!-- Comments - user inputs comments if there are any -->
                <input class="input" type="text" id="comment" name="comment">
            </div>
        </div>
    </div>
    
    <div>
        <button type="button" class="btn btn-success">New row</button>
    </div>
</div>



