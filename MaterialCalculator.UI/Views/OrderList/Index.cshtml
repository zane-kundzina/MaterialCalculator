@model IEnumerable<MaterialCalculator.UI.Models.OrderListViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="OrderList" asp-action="Create" class="btn btn-primary">Create new Order</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Order Number
                    </th>
                    <th>
                        Ordered by
                    </th>
                    <th>
                        Supplier
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">@obj.OrderNumber</td>
                        <td width="25%">@obj.OrderedBy</td>
                        <td width="25%">@obj.Supplier.Name</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="OrderList" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="OrderList" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No orders registered yet</p>
    }

</div>

